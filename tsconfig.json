{
	"compilerOptions": {
		"target": "es2024", // "target": "ESNext" から変更
		"module": "esnext", // "module": "NodeNext" から変更
		"strict": true,
		"verbatimModuleSyntax": null, // "verbatimModuleSyntax": true から変更
		"skipLibCheck": true,
		"types": ["node"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",
		"moduleResolution": "bundler" // 追加
	},
	"exclude": ["node_modules"]
}
